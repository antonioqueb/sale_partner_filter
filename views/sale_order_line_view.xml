<odoo>
    <record id="view_order_form_inherit_partner_filter" model="ir.ui.view">
        <field name="name">sale.order.form.partner.filter.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Insertamos un texto informativo tras el campo order_line -->
            <xpath expr="//field[@name='order_line']" position="after">
                <div>
                    <span style="font-weight: bold;">
                        (Filtro de productos aplicado mediante @api.onchange)
                    </span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
