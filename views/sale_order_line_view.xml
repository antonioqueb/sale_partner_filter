<!-- sale_order_line_view.xml -->
<odoo>
    <record id="view_order_form_inherit_partner_filter" model="ir.ui.view">
        <field name="name">sale.order.form.partner.filter.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Si no quieres añadir nada más, puedes simplemente dejar este record vacío
                 o añadir otros cambios. Pero el @api.onchange será suficiente para aplicar el filtro. -->
            <xpath expr="//field[@name='order_line']" position="after">
                <label string="(Filtro de productos aplicado mediante @api.onchange)"/>
            </xpath>
        </field>
    </record>
</odoo>
